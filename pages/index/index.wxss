/**index.wxss**/
page{
  width:100%;
  height: 100%;
}
.sqbtn{
  display: block;
  border:2rpx solid #dfdfdf;
  border-radius: 8rpx;
  line-height: 88rpx;
}


.container{
  padding: 0;
  margin: 0;
  height: 100%;
  background: #dc6142;
}

.container .box{
  margin: 0 auto;
  padding-top: 40rpx;
}
.container .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.container .userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}
.container .userinfo-name{
  margin: 20rpx 0 26rpx;
  font-weight: 700;
}
.container .box .tit{
  font-size: 30rpx;
  font-weight: 700;
}
.container .box .img{
  margin: 70rpx auto;
  background-color: #fff;
  display:flex;
  flex-wrap:wrap;
  padding:0rpx;
  width:585rpx;
  min-height:100%;
  background:#eee;
  box-sizing:border-box;
}
.item{
  width:195rpx;
  height:195rpx;
  border:8rpx solid #fff;
  box-shadow:1rpx 1rpx 1rpx #ddd;
  box-sizing:border-box;
}
.item image{
  width: 180rpx;
  height: 180rpx;
}
.container .box .img .cue{
  width: 360rpx;
  text-align: center;
  color: #bfa16d;
  position: absolute;
  bottom: 26rpx;
  right: 0;
}
.container .box .txt{
  font-size: 26rpx;
  line-height: 44rpx;
}
.container .btn{
  display: inline-block;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  background: transparent;
  width: 230rpx;
  padding: 0;
  margin: 0;
  position: absolute;
  bottom: 30rpx;
  left: 260rpx;
}
.container .btn image{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  vertical-align: -4rpx;
  margin-right: 10rpx;
}
.container .btn text{
  color:#fff;
}

.container .footer{
  width: 100%;
  padding: 20rpx 0 10rpx;
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  box-shadow: 0 0 8rpx #666;
  position: fixed;
  left: 0;
  bottom: 0;
}
.container .listnav{
  display: inline-block;
  width: 250rpx;
  text-align: center;
}
.container .listnav image{
  width: 50rpx;
  height: 55rpx;
}
.container .listnav view{
  font-size: 24rpx;
  color: #dc6142;
}


