/**balance.wxss**/
page{
  height: 100%;
}
.container{
  height: 100%;
  background: #f1f1f1;
}
.clear-top{
  height: 86rpx;
}
.cl{
  clear: both;
}
.report{
  width:100%;
  text-align: center;
  position: absolute;
  bottom: 24rpx;
  line-height: 50rpx;
}
.report-btn{
  display: inline-block;
  font-size: 28rpx;
  color: #485f89;
  padding: 0 10rpx;
}

.box{
  width: 92%;
  margin: 30rpx auto 0;
  background: #FFF;
  padding-bottom: 40rpx;
  padding-top: 24rpx;
  position: relative;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
  color: #333;
}
.userinfo {
  display: block;
  text-align: center;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: -90rpx;
}
.userinfo-name{
  width: 100%;
  font-size: 28rpx;
  color: #333;
  display:inline-block;
  vertical-align:middle;
  margin-top:6rpx;
}
.zhye{
  padding-left: 48rpx;
  padding-top: 60rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}
.amount{
  display: inline-block;
  min-width: 112rpx;
  margin: 0 6rpx 0 56rpx;
  text-align: right;
  font-size: 60rpx;
  font-weight: 700;
  color: #333;
}
.unit{
  margin-left: 4rpx;
}
.txt{
  font-size: 32rpx;
  padding: 30rpx 0 10rpx;
  overflow: hidden;
  position: relative;
}
.txt .txt-l{
  float: left;
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 48rpx;
  vertical-align: middle;
}
.txt-r{
  float: right;
  width: 61%;
  margin-right:48rpx;
}
.txt .txtipt{
  width: 100%;
  padding-top:0;
  padding-bottom: 26rpx; 
  position: relative;
}
.txt text.icon{
  padding: 0;
  color: #000;
  font-size: 40rpx;
  position: absolute;
  left: 0;
  bottom: 30rpx;
}
.txt input{
  display: block;
  width: 86%;
  height: 60rpx;
  color: #333;
  margin: 0 auto;
  font-size: 40rpx;
  border-bottom:2rpx solid #D9D9D9; 
  padding-left:50rpx;

}
.ts{
  font-size: 26rpx;
  color: #999;
  padding-left: 48rpx;
}
.ts text.entirely{
  margin-left: 8rpx;
  color: #364a79;
}
.ts2{
  padding-left: 0;
  text-align: center
}
.btn-area button{
  width: 592rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 8rpx;
  margin: 40rpx auto;
  background:#28b265;
}

.question{
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
}
.adv{
  position: absolute;
  bottom: 0;
  left: 30rpx;
}