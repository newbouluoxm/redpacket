/**compose.wxss**/
page{
  height: 100%;
  background: #f2f2f2;
}
.container{
  padding: 30rpx 0 0;
  margin: 0;
  height: auto;
}
.upper{
  width: 690rpx;
  height: 840rpx;
  margin: 0 auto;
}
.upper .bg{
  width: 100%;
  height: 100%;
}

.front{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  position: absolute;
  left: 0;
  top: 50rpx;
}

.front .avatar{
  width: 104rpx;
  height: 104rpx;
  margin: 34rpx auto 28rpx;
  position: relative;
}
.front .avatar .ownerimg{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.front .avatar .owner-bg{
  width: 100%;
  height: 100%;
  position: relative;
}
.redtips text{
  display: inline-block;
  vertical-align: middle;
  margin-right: 8rpx;
  font-size: 28rpx;
  font-weight: 700;
}
.redtips image{
  display: inline-block;
  width: 30rpx;
  height: 32rpx;
  vertical-align: middle;
}
.front .describe{
  width: 580rpx;
  margin: 30rpx auto 0;
  line-height: 46rpx;
  font-size: 36rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.upper .ewm{
  width: 244rpx;
  height: 244rpx;
  border-radius: 50%;
   background: #f4e3b8;  
  position: absolute;
  left: 50%;
  margin-left: -122rpx;
  top: 394rpx;
  display: flex;
  justify-content:center;
  align-items:center;
}
.upper .ewm .xcxewm{
  display: block;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  overflow: hidden;
}
.upper .ewm .xcxewm image{
  width: 100%;
  height: 100%;
}
.upper .ewm .open{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -45rpx;
  margin-left: -45rpx;
}


.lower{
  width:690rpx;
  margin: 0 auto;
  padding: 10rpx 0 30rpx;
  text-align: center
}
.lower .btn{
  margin-top: 40rpx;
}
.lower .btn button{
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
}
.lower .btn .retransmission{
  background: #1aac19;
  color: #fff;
}
.lower .btn .generate{
  background: #ffffff;
  margin-bottom: 20rpx;
  color: #333;
  box-shadow: 0 0 6rpx #ccc;
}


.stencil{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #313131;
}
.stencil scroll-view{
  width: 590rpx;
  position: absolute;
  left: 80rpx;
  top: 70rpx;
  bottom: 70rpx;
}
.stencil_con{
  display: flex;
  flex-wrap:wrap ;
  justify-content:space-between;
  -webkit-justify-content:space-between;
  align-items:flex-start;
}
.stencil_con .ls{
  display: inline-block;
  width: 255rpx;
  height: 310rpx;
  margin-top: 66rpx;
  font-size: 0;
  position: relative;
}
.stencil_con .ls:first-child{
  margin-top: 0
}
.stencil_con .ls:nth-child(2){
  margin-top: 0
}
.stencil_con .ls.on::after{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 0 20rpx #fff;
}
.stencil_con .hover-stenvil::after{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 0 20rpx #fff;

}
.stencil_con .ls image{
  width: 100%;
  height: 100%;
}