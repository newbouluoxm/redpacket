/**share.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
  margin: 0;
  justify-content: flex-start;
}

.box{
  width: 750rpx;
  height: 100%;
  background: #cd533e;
}
.upper{
  width: 100%;
  height: 465rpx;
  overflow: hidden;
  position: relative;
}
.bg{
  width: 1800rpx;
  height: 1800rpx;
  background: #dc6142;
  border-radius:50%;
  box-shadow: 0 0 5rpx #c44a35;
  overflow: hidden;
  position: absolute;
  left: 50%;
  bottom: 5rpx;
  margin-left: -900rpx;
}
.bg-img{
  width: 750rpx;
  height: 460rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -375rpx;
}
.bg-img image{
  width: 100%;
  height: 100%;
}
.front{
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #f3e5b4;
  position: absolute;
  left: 0;
  top: 0;
}
.front .avatar{
  width: 120rpx;
  height: 120rpx;
  margin: 16rpx auto 18rpx;
  display: flex;
  justify-content:center;
  align-items:center;
}
.front .avatar .ownerimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.front .avatar .owner-bg{
  width: 100%;
  height: 100%;
  position: relative;
}
.redtips text{
  display: inline-block;
  vertical-align: middle;
  margin-right: 8rpx;
  font-size: 28rpx;
  font-weight: 700;
}
.redtips image{
  display: inline-block;
  width: 30rpx;
  height: 32rpx;
  vertical-align: middle;
}
.front .describe{
  width: 580rpx;
  margin: 30rpx auto 0;
  line-height: 46rpx;
  font-size: 36rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.lower{
  width:100%;
  position: relative;
}
.lower .ewm{
  width: 238rpx;
  height: 238rpx;
  border-radius: 50%;
  background: #ebcb98;
  margin: -122rpx auto;
  display: flex;
  justify-content:center;
  align-items:center;
}
.lower .ewm .ewmImg{
  width: 218rpx;
  height: 218rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}
.lower .ewm .ewmImg .xcxewm{
  width: 100%;
  height: 100%;
}
.lower .ewm .ewmImg .open{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -45rpx;
  margin-left: -45rpx;
}
.operation{
  width:690rpx;
  height: 340rpx;
  margin: 0 auto;
  padding: 180rpx 0 0;
  /* background: #fff; */
  border-radius: 10rpx;
  text-align: center
}
.operation .btn{
  margin-top: 40rpx;
}
.operation .btn button{
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
}
.operation .btn .retransmission{
  background: #1aac19;
  color: #fff;
}
.operation .btn .generate{
  background: #F0F0F0;
  margin-bottom: 20rpx;
  color: #333;
}
.operation .mytry{
  display: inline-block;
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
}
.bot-img{
  width:477rpx;
  height: 65rpx;
  margin:0 auto;
  display: none
}
.bot-img image{
  width: 100%;
  height: 100%;
}

.zhygg{
  /* margin-top: 20rpx; */
  margin:40rpx 0 0;  
  font-size: 26rpx;
  text-align: center
}
.zhygg text{
  color: #fff;
}